<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>by.booking.controllers.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>selectRoom</servlet-name>
        <jsp-file>/assets/pages/index.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>selectRoom</servlet-name>
        <url-pattern>/controller/selectRoom</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>1</session-timeout>
    </session-config>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>by.booking.filters.EncodingFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>by.booking.filters.AuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--<filter>-->
        <!--<filter-name>SecurityFilter</filter-name>-->
        <!--<filter-class>by.booking.filters.SecurityFilter</filter-class>-->
    <!--</filter>-->
    <!--<filter-mapping>-->
        <!--<filter-name>SecurityFilter</filter-name>-->
        <!--<servlet-name>Controller</servlet-name>-->
    <!--</filter-mapping>-->


    <welcome-file-list>
        <welcome-file>assets/pages/index.jsp</welcome-file>
    </welcome-file-list>
</web-app>